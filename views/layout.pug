doctype html
html
  head
    title= title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Oleo+Script+Swash+Caps&display=swap" rel="stylesheet")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.bg-dark.text-light
    if url == "/" || url.startsWith('/about') || url.startsWith('/login') || url.startsWith('/signup') || url.startsWith('/terms-of-service')
      header
        nav.navbar.navbar-expand-md.navbar-dark  
          a.navbar-brand(href="/")
            img.logo(src="/images/logo.png", alt="Chib Link")
          button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse') 
            span.navbar-toggler-icon 
          .collapse.navbar-collapse#navbarCollapse 
            ul.navbar-nav.mr-auto 
              li.nav-item    
                a.nav-link(href="/") Home 
              li.nav-item
                a.nav-link(href="/about") About 
            if user
              ul.navbar-nav 
                li.nav-item.mr-2
                  a.nav-link(href="/edit") Edit links
                li.nav-item 
                  a.nav-link(href="/logout") Logout
            else 
              ul.navbar-nav
                li.nav-item.mr-2
                  a.nav-link(href="/login") Login
                li.nav-item 
                  a.nav-link(href="/signup") Sign up 
    if url.startsWith('/edit') || url.startsWith('/display') || url.startsWith('/account')
      header 
        nav.navbar.navbar-expand-md.navbar-dark 
          button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse')
            span.navbar-toggler-icon 
          .collapse.navbar-collapse#navbarCollapse
            ul.navbar-nav.mr-auto 
              li.nav-item.mr-3
                a.nav-link(href="/edit") Edit links 
              li.nav-item.mr-3
                a.nav-link(href="/display") Display settings 
              li.nav-item.mr-3 
                a.nav-link(href="/account") Account settings
              li.nav-item 
                a.nav-link(href="/") Home 
            ul.navbar-nav
              li.nav-item 
                a.nav-link(href=`/${user.username}` target='_blank') Your ChibLink

    block content
    script(src="/scripts/script.js") 
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous")