extends layout
block content 
    h1 Edit password
    if error 
        h3=error
    form(action="", method="post" onsubmit="return confirm('Are you sure you want to change your password?')")
        .form-group
            label(for="oldPass") Old password:
            input#oldPass.form-control(type="password", name="oldPass" required) 
        .form-group 
            label(for="newPass") New password: 
            input#newPass.form-control(type='password' name='newPass' required)
        .form-group 
            label(for="confirmPass") Confirm new password 
            input#confirmPass.form-control(type='password' name='confirmPass' required)
        button.btn.btn-primary(type="submit") Submit